alt + shift + b
	$BROWSER

alt + shift + i
	networkmanager_dmenu 2> /dev/null

alt + s
        scrot -z ~/media/pictures/screenshots/

alt + shift + s
	scrot -s -z ~/media/pictures/screenshots/

alt + shift + x
	lock

alt + ctrl + s
	lock ; systemctl suspend

alt + ctrl + h
	lock ; systemctl hibernate

alt + ctrl + h
	systemctl poweroff

alt + shift + p
	mpc toggle

alt + F1
	pactl set-sink-mute 0 toggle ; ~/scripts/util/osd/volume.sh +0%

alt + F2
	~/scripts/util/osd/volume.sh -5%

alt + F3
	~/scripts/util/osd/volume.sh +5%

alt + button5
	~/scripts/util/osd/volume.sh -5%

alt + button4
	~/scripts/util/osd/volume.sh +5%

alt + F5
	~/scripts/util/osd/brightness.sh -dec 5

alt + F6
	~/scripts/util/osd/brightness.sh -inc 5

alt + F11
	toggle_touchpad
